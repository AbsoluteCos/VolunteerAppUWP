<Page
    x:Class="VolunteerAppUWP.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VolunteerAppUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF4B4E57">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbWelcome" Text="Welcome " FontSize="42" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Column="1" FontWeight="Bold" />
        <TextBlock FontSize="36" HorizontalAlignment="Left" Margin="0,100,0,0" Grid.Column="1" TextWrapping="Wrap">
            Volunteer is an thing description to be updated at a later date this will wrap around a dynamic margin
        </TextBlock>
        <TextBlock FontSize="36" VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Column="1" TextWrapping="Wrap">
            To start, use the navigation menu whose button is located on the top left corner
        </TextBlock>
    </Grid>
</Page>
